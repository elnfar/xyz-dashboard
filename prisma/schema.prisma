generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

enum Role {
  OWNER
  ADMIN
  BILLING
  USER
  TRACKER
  VIEWER
}

enum IssueCategory {
  NEW
  IN_PROGRESS
  DONE
}

enum Idle {
  NOT_WORKING
  ACTIVE
  MEETING
  LUNCH
  BREAK
  FINISHED
}

model Tenant {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name             String?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  stripeCustomerId String?
  expirationDate   DateTime? // NULL -> means no expiration
  inviteKey        String  @unique  @default(uuid())
  users            User[]
  projects         Project[]
  issues Issue[]
  teamSize Int @default(0)
  activity Activity[]

}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String   @unique
  emailVerified DateTime?
  image         String?
  role       Role       @default(VIEWER)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  accounts      Account[]
  sessions      Session[]
  newsletter Newsletter[]
  assignedIssues IssueAssignment[]
  tenantId   String        @db.ObjectId
  tenant     Tenant     @relation(fields: [tenantId], references: [id])
  isOnboarded Boolean @default(false)

  activity Activity[]

}




model Account {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  userId            String   @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@unique([provider, providerAccountId])
}
 
model Session {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
 
model VerificationToken {
  id               String   @id @default(uuid()) @map("_id")
  identifier String
  token      String
  expires    DateTime
 
  @@unique([identifier, token])
}
 





model Newsletter {
  id               String   @id @default(uuid()) @map("_id")
  title String
  subscriberAmount String @default("0")
  userId  String   @db.ObjectId
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)


  subscriberList  Subscribers[] 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt


}


model Subscribers {
  id               String   @id @default(uuid()) @map("_id")
  email        String     @unique
  newsletterId String
  newsletter   Newsletter @relation(fields: [newsletterId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

}



model Project {
  id               String   @id @default(uuid()) @map("_id")
  name       String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  tenantId   String  @db.ObjectId
  industry String
  tenant     Tenant     @relation(fields: [tenantId], references: [id])
  issues      Issue[]
}
model Issue {
  id               String   @id @default(uuid()) @map("_id")
  title       String
  description String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  category    IssueCategory @default(NEW)
  projectId   String?
  project     Project?       @relation(fields: [projectId], references: [id])
  tenantId   String  @db.ObjectId
  tenant     Tenant     @relation(fields: [tenantId], references: [id])
  assignees   IssueAssignment[]
}

model IssueAssignment {
  id      String @id @default(uuid()) @map("_id")
  issueId String
  userId  String   @db.ObjectId
  issue   Issue @relation(fields: [issueId], references: [id], onDelete: Cascade)
  user    User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([issueId, userId])
}


model Activity {
    id               String   @id @default(uuid()) @map("_id")
  idle Idle @default(NOT_WORKING)
 
  startTime   DateTime
  endTime     DateTime?


  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userId String  @db.ObjectId
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  tenantId String  @db.ObjectId
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

model Test {
  id               String   @id @default(uuid()) @map("_id")
  name String?
}